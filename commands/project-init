#!/bin/bash
# Combined initialization script

# Check if gum is available
if ! command -v gum &> /dev/null; then
    echo "Error: gum is required for this script"
    echo "Install with: brew install gum (or your package manager)"
    exit 1
fi

# Let user choose what to initialize
choice=$(echo -e "Claude snippets\nMise configuration\nProject templates" | gum choose --header="What would you like to initialize?")

case "$choice" in
    "Claude snippets")
        claude-init
        ;;
    "Mise configuration")
        mise-init
        ;;
    "Project templates")
        template-init
        ;;
    *)
        echo "No selection made, exiting."
        exit 0
        ;;
esac